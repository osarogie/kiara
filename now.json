{
  "build": {
    "env": {
      "SITE_HOST": "@tc-site-host",
      "SECURE_HOST": "@tc-secure-host",
      "API_HOST": "@tc-api-host"
    }
  },
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    }
  ],

  "builds": [
    {
      "src": "next.config.js",
      "use": "@now/next"
    }
  ],
  "version": 2,
  "rewrites": [
    {
      "source": "/service-worker.js",
      "destination": "/_next/static/service-worker.js"
    }
  ]
}
