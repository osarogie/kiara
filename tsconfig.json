{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "esnext",
    "paths": {
      "test/*": ["test/*"],
      "underscore": ["lodash"],
      "@lib/*": [
        "lib/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@views/*": [
        "views/*"
      ],
      "@contracts/*": [
        "contracts/*"
      ],
      "@rpc/*": [
        "rpc/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@data/*": [
        "data/*"
      ],
      "@values/*": [
        "values/*"
      ],
      "@relay/*": [
        "relay/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "*": ["src/*", "scss/*"],
    },
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
